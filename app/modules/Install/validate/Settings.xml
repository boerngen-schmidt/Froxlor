<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
	xmlns="http://agavi.org/agavi/config/parts/validators/1.1"
	xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.1"
	parent="%core.module_dir%/Install/config/validators.xml"
>
	
	<ae:configuration>
		
		<validators method="write">
			<validator class="string" translation_domain="froxlor.install.validation">
				<argument>mysql_host</argument>
				<ae:parameters>
					<ae:parameter name="min">1</ae:parameter>
				</ae:parameters>
			</validator>
			<validator class="string" translation_domain="froxlor.install.validation">
				<argument>mysql_database</argument>
				<ae:parameters>
					<ae:parameter name="min">1</ae:parameter>
				</ae:parameters>
			</validator>
			<validator class="string" translation_domain="froxlor.install.validation">
				<argument>mysql_unpriv_user</argument>
				<ae:parameters>
					<ae:parameter name="min">1</ae:parameter>
				</ae:parameters>
			</validator>
			<validator class="string" translation_domain="froxlor.install.validation">
				<argument>mysql_unpriv_pass</argument>
				<ae:parameters>
					<ae:parameter name="min">1</ae:parameter>
				</ae:parameters>
			</validator>
			<validator class="string" translation_domain="froxlor.install.validation">
				<argument>mysql_root_user</argument>
				<ae:parameters>
					<ae:parameter name="min">1</ae:parameter>
				</ae:parameters>
			</validator>
			<validator class="string" translation_domain="froxlor.install.validation">
				<argument>mysql_root_pass</argument>
				<ae:parameters>
					<ae:parameter name="min">1</ae:parameter>
				</ae:parameters>
			</validator>
			<validator class="string" translation_domain="froxlor.install.validation">
				<argument>admin_user</argument>
				<ae:parameters>
					<ae:parameter name="min">1</ae:parameter>
				</ae:parameters>
			</validator>
			<validator class="string" translation_domain="froxlor.install.validation">
				<argument>admin_password</argument>
				<ae:parameters>
					<ae:parameter name="min">1</ae:parameter>
				</ae:parameters>
			</validator>
			<validator class="string" translation_domain="froxlor.install.validation">
				<argument>admin_password_confirmation</argument>
				<ae:parameters>
					<ae:parameter name="min">1</ae:parameter>
				</ae:parameters>
			</validator>
			<validator class="string" translation_domain="froxlor.install.validation">
				<argument>servername</argument>
				<ae:parameters>
					<ae:parameter name="min">1</ae:parameter>
				</ae:parameters>
			</validator>
			<validator class="string" translation_domain="froxlor.install.validation">
				<argument>serverip</argument>
				<ae:parameters>
					<ae:parameter name="min">1</ae:parameter>
				</ae:parameters>
			</validator>
			<validator class="string" translation_domain="froxlor.install.validation">
				<argument>webserver</argument>
				<ae:parameters>
					<ae:parameter name="min">1</ae:parameter>
				</ae:parameters>
			</validator>
			<validator class="string" translation_domain="froxlor.install.validation">
				<argument>httpuser</argument>
				<ae:parameters>
					<ae:parameter name="min">1</ae:parameter>
				</ae:parameters>
			</validator>
			<validator class="string" translation_domain="froxlor.install.validation">
				<argument>httpgroup</argument>
				<ae:parameters>
					<ae:parameter name="min">1</ae:parameter>
				</ae:parameters>
			</validator>
			
		</validators>
		
	</ae:configuration>
	
</ae:configurations>